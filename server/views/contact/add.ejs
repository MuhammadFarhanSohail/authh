<%- include ../Partials/header.ejs %> 
<%- include ../Partials/main_nav.ejs %>
  
          
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
   
  <h1>Add new contact</h1><br><br><br>


      <form class="form" method="post">


        <div class="from-group">
          <label for="nameTextField">Name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter your name"
            name="name"
            required
          />
        </div>

        <div class="from-group">
          <label for="authorTextField">Number</label>
          <input
            type="text"
            class="form-control"
            id="authorTextField"
            placeholder="Enter your phone number"
            name="number"
            required
          />
        </div>

        <div class="from-group">
          <label for="publishedTextField">Email</label>
          <input
            type="text"
            class="form-control"
            id="publishedTextField"
            placeholder="Enter the you email"
            name="Email"
            required
          />
        </div>

        <br>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/contact-list" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>

